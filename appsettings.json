{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "System": "Warning"
    }
  },
  "AppSettings": {
    "Mqtt": {
      "BrokerHost": "${MQTT_BROKER_HOST}",
      "BrokerPort": "${MQTT_BROKER_PORT:1883}",
      "ClientId": "${MQTT_CLIENT_ID:SpotiDialBackend}",
      "Username": "${MQTT_USERNAME}",
      "Password": "${MQTT_PASSWORD}",
      "CommandTopic": "${MQTT_COMMAND_TOPIC:spotidial/commands}",
      "StatusTopic": "${MQTT_STATUS_TOPIC:spotidial/status}",
      "ImageTopic": "${MQTT_IMAGE_TOPIC:spotidial/image}"
    },
    "Spotify": {
      "ClientId": "${SPOTIFY_CLIENT_ID}",
      "ClientSecret": "${SPOTIFY_CLIENT_SECRET}",
      "RefreshToken": "${SPOTIFY_REFRESH_TOKEN}",
      "PollingIntervalMs": "${SPOTIFY_POLLING_INTERVAL_MS:1000}"
    }
  }
}
