# MQTT Broker Configuration
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_CLIENT_ID=SpotiDialBackend
MQTT_USERNAME=mqtttest
MQTT_PASSWORD=mqtttest

# MQTT Topics
MQTT_COMMAND_TOPIC=spotidial/commands
MQTT_STATUS_TOPIC=spotidial/status
MQTT_IMAGE_TOPIC=spotidial/image

# Spotify API Configuration
# Get these from https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=6688c1370f94448aa480ee9ab9c62d9d
SPOTIFY_CLIENT_SECRET=4fc830a8a5f0460a9ebfca24eea1edc2

# Spotify OAuth Configuration
# Port for OAuth callback server (default: 8888)
SPOTIFY_OAUTH_CALLBACK_PORT=8888
# Redirect URI (must match what's configured in Spotify Dashboard)
# IMPORTANT: Add this exact URI to your Spotify app's Redirect URIs:
# https://developer.spotify.com/dashboard → Your App → Settings → Redirect URIs
SPOTIFY_OAUTH_REDIRECT_URI=http://127.0.0.1:8888/callback

# Spotify Refresh Token (OPTIONAL)
# If not provided, the backend will automatically start an OAuth flow on first run
# and save the refresh token to spotify_token.json for future use.
#
# If you want to manually provide a refresh token, uncomment the line below:
# SPOTIFY_REFRESH_TOKEN=your_refresh_token_here

# Spotify Polling Interval (milliseconds)
# How often to check for song changes
SPOTIFY_POLLING_INTERVAL_MS=1000
